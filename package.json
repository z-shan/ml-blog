{
  "name": "ml-blog",
  "version": "1.0.0",
  "description": "Blog for ml",
  "main": "index.js",
  "eslintIgnore": [
    "restHelper.js"
  ],
  "scripts": {
    "start": "npm-run-all --parallel security-check cp-images cp-fonts build-css lint:watch watch-js open:server",
    "start-prod": "npm-run-all --parallel security-check cp-images cp-fonts build-js build-css run:server",
    "run:server": "node ./src/server/main.js",
    "open:server": "nodemon ./src/server/main.js",
    "lint": "esw -c .eslintrc src --color",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "nsp check",
    "build-js": "mkdirp dist/scripts && browserify -t reactify ./src/app/main.js -o dist/scripts/bundle.js",
    "watch-js": "mkdirp dist/scripts && watchify -t reactify ./src/app/main.js -d -o dist/scripts/bundle.js -v",
    "build-css": "mkdirp dist/css && cat node_modules/bootstrap/dist/css/bootstrap.min.css node_modules/toastr/build/toastr.css ./src/app/styles/*.css > dist/css/bundle.css",
    "cp-images": "mkdirp dist/images && cp ./src/app/images/*.* dist/images/",
    "cp-fonts": "mkdirp dist/fonts && cp ./src/app/fonts/*.* dist/fonts/",
    "clean": "rm -rf dist/",
    "mkdb": "seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-shan/ml-blog.git"
  },
  "author": "Zeeshan Ahmed",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "bootstrap": "^3.3.7",
    "browserify": "^14.4.0",
    "express": "^4.15.3",
    "flux": "^2.0.3",
    "jquery": "^3.2.1",
    "jsonwebtoken": "^7.4.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.10.8",
    "open": "0.0.5",
    "react": "^0.14.9",
    "react-dom": "^0.14.9",
    "react-router": "^0.13.3",
    "reactify": "^1.1.1",
    "toastr": "^2.1.2"
  },
  "devDependencies": {
    "eslint": "^4.2.0",
    "eslint-watch": "^3.1.2",
    "node-mongo-seeds": "^2.3.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "nsp": "^2.6.3",
    "watchify": "^3.9.0"
  }
}
